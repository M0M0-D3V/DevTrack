@model NewWorkspaceModel
@{
    ViewData["Title"] = "New Workspace";
}
@* <head>
    <link rel="stylesheet" href="~/css/loginstyle.css"/>
</head> *@
<div class="modal fade" id="NewWorkspace" tabindex="-1" role="dialog" aria-labelledby="NewWorkspace" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="NewWorkspaceLongTitle">Create Your Workspace</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Workspace" method="POST">
                    <div class="form-group">
                    <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" placeholder="Team Name"/> <br>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-md" type="submit" >Create Workspace</button>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
