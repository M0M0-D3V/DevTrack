@model AuthenticateModel

<form asp-action="Authenticate" asp-controller="User" method="POST">
<h3 class="display-4 text-center">Sign In</h3>
    <div class="form-group">
    @* <label asp-for="Email"></label> *@
        <input class="form-control" placeHolder="Username" style="opacity: 0.3; border: none;" asp-for="Username"/> <br>
    @* <label asp-for="Password"></label> *@
        <input class="form-control" placeHolder="Password" style="opacity: 0.2; border: none;" asp-for="Password"/>
        <span class="text-danger" asp-validation-for="Username"></span>
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <button class="btn btn-success btn-md btn-block" type="submit" style="opacity: 0.5;">Sign In</button>
    </div>
</form>
<p>
    <a href="#">Forgotten your password?</a>
</p>
<p>
    <a href="#">Not a member? Register</a>
</p>

